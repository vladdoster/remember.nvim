{
  "repositoryUrl": "https://github.com/vladdoster/remember.nvim",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "eslint",
        "releaseRules": [
          {
            "tag": "build",
            "release": "patch"
          },
          {
            "tag": "chore",
            "release": "patch"
          },
          {
            "tag": "docs",
            "release": "patch"
          },
          {
            "tag": "fix",
            "release": "patch"
          },
          {
            "tag": "new",
            "release": "minor"
          },
          {
            "tag": "init",
            "release": "major"
          },
          {
            "tag": "maint",
            "release": "minor"
          },
          {
            "tag": "update",
            "release": "minor"
          }
        ]
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "README.md",
              "VERSION"
            ],
            "from": "([v]?[0-9]).+([0-9]).+([0-9])",
            "to": "v${nextRelease.version}",
            "results": [
              {
                "file": "README.md",
                "hasChanged": true
              },
              {
                "file": "VERSION",
                "hasChanged": true
              }
            ]
          },
          {
            "files": [
              "doc/remember.txt"
            ],
            "from": "^Version: (([v]?[0-9]).+([0-9]).+([0-9]))$",
            "to": "Version: ${nextRelease.version}",
            "results": [
              {
                "file": "doc/remember.txt",
                "hasChanged": true
              }
            ]
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "eslint"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "README.md",
          "VERSION",
          "doc/remember.txt"
        ],
        "message": "release: v${lastRelease.version || '0.0.0' } â†’ v${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
