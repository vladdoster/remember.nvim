{
  "repositoryUrl": "https://github.com/vladdoster/neovim-configuration",
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "VERSION"
            ],
            "from": "([v]?[0-9]).+([0-9]).+([0-9])",
            "to": "${nextRelease.version}",
            "results": [
              {
                "file": "VERSION",
                "hasChanged": true
              }
            ]
          },
          {
            "files": [
              "doc/remember.txt"
            ],
            "from": "^(-- )?Version: (([v]?[0-9]).+([0-9]).+([0-9]))$",
            "to": "Version: ${nextRelease.version}",
            "results": [
              {
                "file": "doc/remember.txt",
                "hasChanged": true
              }
            ]
          },
          {
            "files": [
              "lua/remember.lua"
            ],
            "from": "^-- Version: (([v]?[0-9]).+([0-9]).+([0-9]))$",
            "to": "-- Version: ${nextRelease.version}",
            "results": [
              {
                "file": "lua/remember.lua",
                "hasChanged": true
              }
            ]
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "VERSION",
          "doc/remember.txt",
          "lua/remember.lua"
        ],
        "message": "ci: v${lastRelease.version} â†’ v${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
